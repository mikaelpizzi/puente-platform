{
  "name": "puente-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "lint": "corepack pnpm -r run lint",
    "test": "corepack pnpm -r run test",
    "typecheck": "corepack pnpm -r run typecheck",
    "build": "corepack pnpm -r run build",
    "prepare": "husky",
    "provision:data": "tsx ./scripts/provision-data.ts",
    "dev:infra": "docker compose up -d postgres mongo redis",
    "dev:infra:down": "docker compose down",
    "dev:db": "pnpm --filter @puente/auth-service prisma db push && pnpm --filter @puente/finance-service prisma db push",
    "dev:backend": "tsx ./scripts/dev-backend.ts",
    "dev:stack": "pnpm dev:backend",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "ioredis": "^5.8.2",
    "lint-staged": "^16.2.6",
    "mongodb": "^7.0.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.47.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/platform-express": "^11.1.9",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.54.0"
  }
}
